                 nombre         CDATA       #REQUIRED
                 preparacion    NMTOKEN     #REQUIRED>

<!ELEMENT ingrediente EMPTY>
<!ATTLIST ingrediente nombre        CDATA               #REQUIRED
                      unidad        (pieza|gramo|cc)    #REQUIRED
                      cantidad      NMTOKEN             #REQUIRED>